<resources>

    <!-- Tema utama aplikasi -->
    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <!-- Core colors -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primary_container</item>

        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondary_container</item>

        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiary_container</item>

        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>

        <item name="android:windowBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>

        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>

        <!-- Font default -->
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Dialog login -->
    <style name="LoginDialogTheme" parent="Theme.Material3.DayNight.Dialog.Alert">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="android:background">@drawable/rounded_dialog_login</item>
    </style>

    <!-- Nav & image -->
    <style name="OvalImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CircleShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Bottom sheet modern -->
    <style name="ModernBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModernBottomSheetStyle</item>
    </style>

    <style name="ModernBottomSheetStyle" parent="Widget.Material3.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/BottomSheetShape</item>
        <item name="backgroundTint">?attr/colorSurface</item>
    </style>

    <style name="BottomSheetShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
    </style>


    <style name="ActionIconStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">12dp</item>
        <item name="android:tint">#616161</item> </style>

    <style name="FormatIconStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">12dp</item>
        <item name="android:tint">#424242</item> </style>

    <style name="VerticalDivider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#E0E0E0</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Menu Note-->
    <!-- Corner radius untuk popup -->
    <style name="ShapeAppearance.PopupMenu" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!-- Material PopupMenu style -->
    <style name="Widget.App.PopupMenu" parent="Widget.Material3.PopupMenu">
        <item name="shapeAppearance">@style/ShapeAppearance.PopupMenu</item>
    </style>

</resources>
