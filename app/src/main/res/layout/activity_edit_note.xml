<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_light_surface"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?attr/colorPrimary"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            app:tint="?attr/colorOnPrimary" />

        <LinearLayout
            android:id="@+id/layout_default_actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageButton
                android:id="@+id/btn_delete"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Delete"
                app:tint="?attr/colorOnPrimary"
                android:visibility="gone"/>
            <ImageButton
                android:id="@+id/btn_share"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Share"
                app:tint="?attr/colorOnPrimary"
                android:visibility="gone"/>
            <ImageButton
                android:id="@+id/btn_menu"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_menu"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Menu"
                app:tint="?attr/colorOnPrimary" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_input_actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/btn_undo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_undo"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Undo"
                app:tint="?attr/colorOnPrimary" />

            <ImageButton
                android:id="@+id/btn_redo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_redo"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Redo"
                app:tint="?attr/colorOnPrimary" />

            <ImageButton
                android:id="@+id/btn_save_manual"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="6dp"
                android:src="@drawable/ic_save"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="?attr/colorOnPrimary"
                android:contentDescription="Save" />

        </LinearLayout>

    </RelativeLayout>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_container"
        android:layout_above="@id/keyboard_toolbar"
        android:padding="16dp">

    <LinearLayout
            android:id="@+id/note_root_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:hint="Title"
                android:textSize="22sp"
                android:textStyle="bold"
                android:background="@null"
                android:inputType="textMultiLine"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tv_metadata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jan 01 2025, 12:00 | 0 chars"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/et_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:minHeight="300dp"
                android:gravity="top|start"
                android:hint="Start typing..."
                android:background="@null"
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.2"
                android:inputType="textMultiLine|textCapSentences"/>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/share_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="#000000"
        android:visibility="gone"
        android:layout_below="@id/header_container"
        android:layout_above="@id/keyboard_toolbar">

        <!-- TITLE -->
        <TextView
            android:id="@+id/share_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/share_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:paddingBottom="8dp"/>

        <!-- CONTENT -->
        <TextView
            android:id="@+id/share_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/keyboard_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?attr/colorSecondary"
        android:elevation="4dp"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/keyboard_toolbar_layout"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="4dp">

            <!-- tombol toolbar -->
            <ImageButton
                android:id="@+id/action_text_color"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_text_color"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Text Color"/>

            <ImageButton
                android:id="@+id/action_highlight"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_text_highlight"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Highlight"/>

            <View
                android:layout_width="8dp"
                android:layout_height="match_parent"/>

            <ImageButton
                android:id="@+id/action_bold"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_text_bold"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Bold"/>

            <ImageButton
                android:id="@+id/action_italic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_text_italic"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Italic"/>

            <ImageButton
                android:id="@+id/action_underline"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_text_underline"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Garis Bawah"/>

            <ImageButton
                android:id="@+id/action_strike"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_text_strikethrough"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Strikethrough"/>

            <View
                android:layout_width="8dp"
                android:layout_height="match_parent"/>

            <ImageButton
                android:id="@+id/action_bullet_list"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_text_list_bulleted"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="List Dot"/>

            <ImageButton
                android:id="@+id/action_align_left"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_text_align_left"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Align Left"/>

            <ImageButton
                android:id="@+id/action_align_center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_text_align_center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Align Center"/>

            <ImageButton
                android:id="@+id/action_align_right"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_text_align_right"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Align Right"/>

            <View
                android:layout_width="8dp"
                android:layout_height="match_parent"/>

            <ImageButton
                android:id="@+id/action_size_up"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_text_increase"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Size Up"/>

            <ImageButton
                android:id="@+id/action_size_down"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_text_decrease"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Size Down"/>
        </LinearLayout>
    </HorizontalScrollView>

</RelativeLayout>